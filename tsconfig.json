{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022"],
    "module": "Node16",
    "moduleResolution": "node16",
    "allowJs": true,
    "checkJs": true,
    "maxNodeModuleJsDepth": 1,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "strict": true
  },
  "include": [
    "src",
    "tests"
  ]
}
